<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/pokcertificate/db" VERSION="20120122" COMMENT="XMLDB file for Page module"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="pokcertificate" COMMENT="Each record is one pokcertificate and its config data">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="certificatename" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="orgname" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="orgid" TYPE="int" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="templateid" TYPE="int"  LENGTH="50" NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="templatename" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="templatedata" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="certificateurl" TYPE="text" NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="content" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="contentformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="legacyfiles" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="legacyfileslast" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="display" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="displayoptions" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="revision" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="incremented when after each file changes, solves browser caching issues"/>
        <FIELD NAME="usercreated" TYPE="char"  LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int"  LENGTH="10" NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="usermodified" TYPE="char"  LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>

     <TABLE NAME="pokcertificate_settings" COMMENT="POK certificate auth api information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="institution" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="domain" TYPE="char" LENGTH="255" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="authtoken" TYPE="char" LENGTH="255" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="isverified" TYPE="int" LENGTH="5" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="availablecertificates" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="pendingcertificates" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="issuedcertificates" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="incompleteprofiles" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="endofservices" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="response" TYPE="text"  NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="usercreated" TYPE="char"  LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int"  LENGTH="10" NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="usermodified" TYPE="char"  LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="pokcertificate_issues" COMMENT="Certificate issue information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="certid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="int" LENGTH="5" NOTNULL="true"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="response" TYPE="text"  NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="usercreated" TYPE="char"  LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int"  LENGTH="10" NOTNULL="false"  DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="usermodified" TYPE="char"  LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>

    </TABLE>
  </TABLES>
</XMLDB>
