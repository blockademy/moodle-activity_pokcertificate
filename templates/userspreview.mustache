{{#showdata}}
    <table class="generaltable dataTable no-footer" role="grid">
        <thead>
            <tr role="row">
                <th>{{#str}}studentname,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}surname,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}email,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}studentid,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}language,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}profilestatus,mod_pokcertificate{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#data}}
                <tr>
                    <td>{{firstname}}</td>
                    <td>{{lastname}}</td>
                    <td>{{email}}</td>
                    <td>{{studentid}}</td>
                    <td>{{language}}</td>
                    <td>
                        <form id="editprofile{{cmid}}" action="updateprofile.php" method="post">
                        <input type="hidden" name="courseid" id = "courseid" value = {{courseid}}>
                        <input type="hidden" name="userids" id = "userids" value = {{userids}}>
                        <input type="hidden" name="id" id = "id" value = {{userid}}>
                        <input type="hidden" name="cmid" id = "cmid" value = {{cmid}}>
                        <input type="hidden" name="flag" id = "flag" value = "1">
                        {{^validuser}}
                             <a href="#" onclick="document.getElementById('editprofile{{cmid}}').submit();" style = "color:#e62e00">{{#str}}edit{{/str}}</a>
                        {{/validuser}}
                        {{#validuser}}
                        <span style = "color:#094478">{{status}}</span>
                        {{/validuser}}
                        </form>
                    </td>
                </tr>
            {{/data}}
        </tbody>
    </table>
{{/showdata}}
{{^showdata}}
    <div class="alert alert-info alert-block fade in  alert-dismissible" role="alert" data-aria-autofocus="true">
        No Record Available
    </div>
{{/showdata}}

