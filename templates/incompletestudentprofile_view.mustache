{{#response}}
    {{#viewtypeCard}}
        <table class="generaltable dataTable no-footer" id="skill_repository" role="grid" aria-describedby="skill_repository">
            <thead>
                <tr role="row">
                    <th>{{#str}}studentname,mod_pokcertificate{{/str}}</th>
                    <th>{{#str}}surname,mod_pokcertificate{{/str}}</th>
                    <th>{{#str}}email,mod_pokcertificate{{/str}}</th>
                    <th>{{#str}}studentid,mod_pokcertificate{{/str}}</th>
                    <th>{{#str}}language,mod_pokcertificate{{/str}}</th>
                    <th>{{#str}} action,mod_pokcertificate{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#records}}
                    <tr>
                        <td>{{firstname}}</td>
                        <td>{{lastname}}</td>
                        <td>{{email}}</td>
                        <td>{{studentid}}</td>
                        <td>{{language}}</td>
                        <td>
                            <a href="{{globals.config.wwwroot}}/mod/pokcertificate/updateprofile.php?id={{id}}">
                                <span class='createicon'>
                                    <i class='createiconchild fa fa-pencil' aria-hidden='true'></i>
                                </span>
                            </a>
                        </td>
                    </tr>
                {{/records}}
            </tbody>
        </table>
    {{/viewtypeCard}}
{{/response}}
